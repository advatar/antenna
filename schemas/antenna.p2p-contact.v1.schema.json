{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:antenna:schema:p2p-contact:v1",
  "title": "Antenna P2P Contact Card v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "transports",
    "updatedAt"
  ],
  "properties": {
    "type": {
      "const": "antenna.p2p-contact.v1"
    },
    "agent": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "agentRegistry": {
          "type": "string",
          "pattern": "^eip155:\\d+:0x[0-9a-fA-F]{40}$"
        },
        "agentId": {
          "type": "integer",
          "minimum": 0
        },
        "ens": {
          "type": "string",
          "pattern": "^[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?(?:\\.[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?)+$"
        }
      }
    },
    "transports": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/transport"
      }
    },
    "pubsub": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "gossip",
              "storeAndForward"
            ]
          }
        },
        "maxInboundBytes": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 10485760
        }
      }
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "$defs": {
    "transport": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "enum": [
            "webrtc",
            "libp2p",
            "custom"
          ]
        },
        "signal": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "type",
              "uri"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "relay",
                  "direct"
                ]
              },
              "uri": {
                "type": "string",
                "minLength": 3
              }
            }
          }
        },
        "addresses": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 3
          }
        },
        "notes": {
          "type": "string",
          "maxLength": 400
        }
      }
    }
  }
}